rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat messages - users can only access their own chats
    match /chats/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Resume analysis - users can only access their own resume data
    match /resumes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Recommendations - users can only access their own recommendations
    match /recommendations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for career data, job listings, etc.
    match /careers/{document} {
      allow read: if true;
      allow write: if false; // Only admins should write career data
    }
    
    match /jobs/{document} {
      allow read: if true;
      allow write: if false; // Only admins should write job data
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
