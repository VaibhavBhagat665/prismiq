# API URLs
VITE_API_URL=http://localhost:4000
VITE_ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_URL=http://localhost:8000

# Firebase Configuration (required for all features)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# For multiline private key, replace \n with actual newlines when set in host UI
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Optional: Firebase service account key JSON (alternative to individual fields)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Frontend Firebase Config (for client-side auth)
VITE_FIREBASE_API_KEY=your-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# AI/LLM Configuration (required for AI features)
GEMINI_API_KEY=your-gemini-api-key
VITE_GEMINI_API_KEY=your-gemini-api-key

# Optional: OpenAI (if using OpenAI instead of Gemini)
OPENAI_API_KEY=sk-your-openai-key
